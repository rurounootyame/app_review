<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'apps', user: @user %>
        <%= render 'apps2', app_new: @app_new %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>App detail</h2>
        <table class='table table-hover table-inverse'>

          <tbody>
            <tr>
             <td>
              <%= link_to user_path(@user.id) do %>
               <%= image_tag @user.get_profile_image, size: "100*100" %><br/>
               <%= @user.name %>
              <% end %>
             </td>
             <td>
              <%= link_to app_path(@app.id) do %>
               <%= @app.title %>
              <% end %>
             </td>
             <td>
               <%= @app.body %>
             </td>
               <% if @user == current_user %>
             <td>
               <%= link_to "Edit", edit_app_path(@app.id), class: "btn btn-sm btn-success" %>
             </td>
             <td>
               <%= link_to "Destroy", app_path(@app.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "削除しますか？" %>
             </td>
             <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>