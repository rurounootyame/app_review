<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>

        <table class='table'>
          <tr>
            <th><%= image_tag @user.get_profile_image, size: "100×100"  %></th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>  <!-- 固定値 -->
          </tr>
        </table>
        <div class='row'>
          <!-- 編集リンクが未実装 -->
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New app</h2>
        <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
      <%= form_with model: @app_new, local: true do |f| %>
      <p>app名</p>
      <%= f.text_field :title %>
      <p>感想</p>
      <%= f.text_area :body %>
      <p>app画像　<画像投稿ができるようにする></p>
      <%= f.submit "投稿" %>
      <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>apps</h2>
        <!-- 投稿した書籍一覧表示を作成しましょう。 -->
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
              <th>app</th>
            </tr>
          </thead>
          <tbody>
             <tr>
         <% @apps.each do |app| %>
           <td>
             <%= link_to user_path(@user.id) do %>
              <td><%= image_tag @user.get_profile_image, size: "100x100" %></td>
              <td><%= link_to app.title, app_path(app.id) %></td>
             <% end %>
           </td>
              <th><%= app.body %></th>
           </td>
          </tbody>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>